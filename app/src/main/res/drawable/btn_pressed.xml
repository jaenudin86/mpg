<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="#8080ff" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>
    <item>
        <inset
            android:insetTop="5dp"
            android:insetRight="5dp"
            android:insetBottom="5dp"
            android:insetLeft="5dp">
            <shape
                android:shape="rectangle">
                <gradient
                    android:startColor="#4d4dff"
                    android:endColor="#0000b3"
                    android:angle="270" />
                <corners
                    android:radius="4dp" />
            </shape>
        </inset>
    </item>
</layer-list>