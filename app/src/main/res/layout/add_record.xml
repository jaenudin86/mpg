<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_record_title"
            android:textSize="@dimen/dialog_header_text_size"
            android:layout_gravity="top|center"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:hint="vehicle text"
            android:id="@+id/current_vehicle_add_record_frag"
            android:textSize="20dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_marginTop="85dp"
        android:layout_gravity="center_horizontal|top">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="6"
                android:layout_marginLeft="15dp">

                <TextView
                    android:textSize="24sp"
                    android:text="@string/gas_station" />
                <EditText
                    android:id="@+id/station_location"
                    android:hint="@string/gas_station_blank_name"
                    android:gravity="left|center_vertical"
                    android:textColorHint="@color/verylightgrey"
                    android:textSize="@dimen/entry_text_size"
                    android:ems="5"
                    android:background="@color/entryTextBoxColor"
                    android:layout_marginBottom="10dp"
                    android:inputType="textCapWords"/>

                <TextView
                    android:textSize="24sp"
                    android:text="@string/odometer"/>

                <EditText
                    android:id="@+id/mileage"
                    android:hint="@string/odometer_blank_text"
                    android:textColorHint="@color/verylightgrey"
                    android:ems="4"
                    android:gravity="left|center_vertical"
                    android:inputType="numberDecimal|numberSigned"
                    android:textSize="@dimen/entry_text_size"
                    android:background="@color/entryTextBoxColor"
                    android:layout_marginBottom="10dp"/>
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="24sp"-->
                <!--android:text="mi"/>-->
                <TextView
                    android:textSize="24sp"
                    android:text="Gallons: "/>

                <EditText
                    android:id="@+id/gallons"
                    android:hint="quantity"
                    android:gravity="left|center_vertical"
                    android:textColorHint="@color/verylightgrey"
                    android:inputType="numberDecimal|numberSigned"
                    android:textSize="@dimen/entry_text_size"
                    android:ems="3"
                    android:background="@color/entryTextBoxColor"
                    android:layout_marginBottom="10dp"/>

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="24sp"-->
                <!--android:text="gal"/>-->

                <TextView
                    android:textSize="24sp"
                    android:text="@string/price"/>

                <EditText
                    android:id="@+id/price"
                    android:gravity="left|center_vertical"
                    android:hint="@string/price_blank_text"
                    android:textColorHint="@color/verylightgrey"
                    android:inputType="numberDecimal|numberSigned"
                    android:textSize="@dimen/entry_text_size"
                    android:ems="3"
                    android:background="@color/entryTextBoxColor"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:textSize="24sp"
                    android:text="@string/date"/>

                <EditText
                    android:id="@+id/date"
                    android:inputType="date"
                    android:hint="@string/date_blank_text"
                    android:gravity="right"
                    android:textSize="@dimen/entry_text_size"
                    android:background="@color/entryTextBoxColor"
                    android:layout_marginBottom="10dp"/>

            </GridLayout>
            <Button
                android:id="@+id/add_new_car_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_record_title"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:layout_margin="50dp"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/colorPrimary"
                android:elevation="40dp"/>
        </LinearLayout>

    </ScrollView>
</FrameLayout>
