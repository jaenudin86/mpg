<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/current_vehicle_list"
        android:gravity="center"
        android:textSize="@dimen/dialog_header_text_size"/>
    <ListView
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/vehicle_listview"
        android:entries="@array/default_vehicle_list"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_above="@+id/add_new_vehicle">
    </ListView>
    <Button
        android:id="@+id/add_new_vehicle"
        style="@style/button_style"
        android:background="@drawable/custom_button"
        android:text="@string/add_new_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notify_long_press"
        android:id="@+id/textView" />

</RelativeLayout>